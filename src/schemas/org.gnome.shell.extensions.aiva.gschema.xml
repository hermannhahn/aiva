<schemalist gettext-domain="gnome-shell-extensions">
  <schema id="org.gnome.shell.extensions.aiva"
      path="/org/gnome/shell/extensions/aiva/">
    
    <!-- gemini-api-key -->
    <key name="gemini-api-key" type="s">
        <default>"KEY"</default>
        <summary>Gemini api key for working</summary>
        <description>
            You need to set api key for this extention
        </description>
    </key>
    <!-- azure-speech-key -->
    <key name="azure-speech-key" type="s">
        <default>"AZURE_SPEECH_KEY"</default>
        <summary>Azure speech api key for voice working</summary>
        <description>
            You need to set api key for voice working in this extention
        </description>
    </key>
    <!-- azure-speech-region -->
    <key name="azure-speech-region" type="s">
        <default>"eastus"</default>
        <summary>Azure speech region for voice working</summary>
        <description>
            You need to set region for voice working in this extention
        </description>
    </key>
    <!-- azure-speech-language -->
    <key name="azure-speech-language" type="s">
        <default>"en-US"</default>
        <summary>Azure speech language for voice working</summary>
        <description>
            You need to set language for voice working in this extention
        </description>
    </key>
    <!-- azure-speech-voice -->
    <key name="azure-speech-voice" type="s">
        <default>"en-US-JennyNeural"</default>
        <summary>Azure speech voice for voice working</summary>
        <description>
            You need to set voice for voice working in this extention
        </description>
    </key>
    <!-- assist-name -->
    <key name="assist-name" type="s">
        <default>"AIVA"</default>
        <summary>Assistant name</summary>
        <description>
            Set your assistant name
        </description>
    </key>
    <!--- log-history -->
    <key name="log-history" type="b">
        <default>true</default>
        <summary>Remember talk history</summary>
        <description>
           it will remeember talk history
        </description>
    </key>
    <!--- theme-transparency -->
    <key name="theme-transparency" type="s">
        <default>"0"</default>
        <summary>Transparency of theme</summary>
        <description>
           Set transparency of theme
        </description>
    </key>
    <!--- theme-color -->
    <key name="theme-color" type="s">
        <default>"25, 25, 25"</default>
        <summary>Color of theme</summary>
        <description>
           Set color of theme
        </description>
    </key>
    <!--- user-name -->
    <key name="user-name" type="s">
        <default>"Me"</default>
        <summary>User nanem</summary>
        <description>
           Set user name
        </description>
    </key>
    <!--- location -->
    <key name="location" type="s">
        <default>"Undefined"</default>
        <summary>Location</summary>
        <description>
           Set user location
        </description>
    </key>
  </schema>
</schemalist>